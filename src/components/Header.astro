---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
            <HeaderLink href="/">Home</HeaderLink>
            
            <HeaderLink href="/archive/">Archive</HeaderLink>

            <HeaderLink href="/about/">About</HeaderLink>

            <HeaderLink href="/tag/">Tags</HeaderLink>

            <HeaderLink href="/friendlink/">Links</HeaderLink>
        </div>
        <!-- ä¸»é¢˜åˆ‡æ¢æŒ‰é’® -->
        <div class="theme-switcher">
            <button id="theme-toggle" aria-label="Theme menu">ðŸŽ¨</button>
            <ul id="theme-menu" hidden>
                <li><button data-theme="default">Default</button></li>
                <li><button data-theme="purple">Purple</button></li>
                <li><button data-theme="green">Green</button></li>
                <li><button data-theme="dark">Dark Mode</button></li>
            </ul>
        </div>
    </nav>
</header>


<style>
	header {
		margin: 0;
		padding: 0 1em;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
        justify-content: space-between;
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
        padding: 1em 0;
        height: 20px;
        background: rgb(var(--juliet-pink)/0.07);
	}
	nav a {
		padding: 0.5em 0.2em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
        border-bottom-color: rgb(var(--juliet-pink)/0.8);
	}
    .internal-links {
        display: flex;
        gap: 1em;
        margin-left: auto;
        margin-right: 1em;
    }
    .theme-switcher {
        position: relative;
    }
    #theme-toggle {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 1.2em;
        padding: 0.5em;
        color: var(--black);
    }
    #theme-menu {
        position: absolute;
        right: 0;
        top: 120%;
        list-style: none;
        margin: 0;
        padding: 0 0;
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        z-index: 100;
        min-width: 120px;
        border: 2px solid rgb(var(--juliet-pink));
    }

    #theme-menu li {
        margin: 2px 0; /* åˆ—è¡¨é¡¹ä¹‹é—´ç•™ä¸€ç‚¹ç‚¹ç©ºéš™ */
    }

    #theme-menu button {
        width: 100%;
        background: none;
	    border: none;
	    padding: 0.8em 0.8em;
	    text-align: left;
        cursor: pointer;
        font-size: 0.7em;
        border-radius: 8px;
        transition: all 0.2s ease;
    }

    #theme-menu button:hover {
	    background: rgb(var(--juliet-pink) / 0.25);
    }

    @media (max-width: 480px) {
        header {
            padding: 0 0.5em;
        }

        nav {
            padding: 0.3em 0.5em;
            height: auto;
            border-radius: 0;
            flex-direction: column;
            align-items: flex-start;
            gap: 0.3em;
            background: rgba(var(--juliet-pink)/0.10);
        }

        h2 {
            font-size: 1.1em;
        }

        .internal-links {
            width: 100%;
            display: flex;
            justify-content: space-between;
            margin-right: 0;
            gap: 0.5em;
        }

        nav a {
            padding: 0.3em 0;
            font-size: 0.9em;
        }
    }
</style>
